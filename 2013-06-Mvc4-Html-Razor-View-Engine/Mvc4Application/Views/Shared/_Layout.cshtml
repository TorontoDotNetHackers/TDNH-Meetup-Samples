<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/TodoList.css" rel="stylesheet">
        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/themes/base/css")
    </head>
    <body>
        <div id="userSettings">
        </div>

        <div id="body">
            @RenderBody()
        </div>

        <footer>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Todo List", "Index", "Html", new {area = ""}, null)</li>
                </ul>
            </nav> 
            <p>Learn more about <a href="http://go.microsoft.com/fwlink/?LinkId=273732">Single Page Applications</a></p>
            <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/ajaxlogin")
        @RenderSection("scripts", required: false)
    </body>
</html>